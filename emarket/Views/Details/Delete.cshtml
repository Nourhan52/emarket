@model emarket.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    emarket.Models.Product product = ViewBag.Product;
}

    <head>
        <style>

            img, h1 {
                display: block;
                margin-left: auto;
                margin-right: auto;
                text-align: center;
            }

            h4 {
                color: grey;
                font-size: 22px;
            }

            #Details {
                border: 1px solid;
                padding: 5px;
            }

            .button {
                background-color: #4CAF50;
                border: none;
                color: white;
                padding: 16px 32px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                transition-duration: 0.4s;
                cursor: pointer;
            }

            .button1 {
                background-color: white;
                color: black;
                border: 2px solid #4CAF50;
            }

                .button1:hover {
                    background-color: #4CAF50;
                    color: white;
                }
        </style>
    </head>
    <body>
        <h3 style="color:maroon">Are you sure you want to delete this item?!</h3>
        <hr />
        <div class="container">
            <div class=" col-lg-8 col-md-8 col-sm-8">
                <div class="row" id="Delete">

                    <h3 style="color:indigo ;text-align:center">@product.name</h3>

                    <img src="~/Uploads/@product.image" style="width: 20% ;height: 10%" ; />
                    <h3 style="color:darkblue;text-align:center">Price: @product.price L.E</h3>
                    <hr />
                    <h4 style="color:mediumblue">Description:</h4>
                    <div style="width:1150px;height:60px;overflow:auto">
                        <p style="color:indigo">@product.description</p>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to home", "Index", "Home")
                    </div>
                }
            </div>
        </div>


    </body>
